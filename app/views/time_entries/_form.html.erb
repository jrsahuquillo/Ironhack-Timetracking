<!-- Partial -->

<% if @my_entry.errors.any? %>
<ul>
  <% @my_entry.errors.full_messages.each do |error_msg| %>
    <li><%= error_msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for [@my_project, @my_entry] do |f| %>
<%= f.label :hours %>
<%= f.text_field :hours %>
<br><br>
<%= f.label :minutes %>
<%= f.text_field :minutes %>
<br><br>
<%= f.label :date %>
<%= f.date_field :date %>
<br><br>
<%= f.button %>
<% end %>
<br>
<a href="/projects/<%= @my_project.id %>/time_entries/">Back to project</a>
